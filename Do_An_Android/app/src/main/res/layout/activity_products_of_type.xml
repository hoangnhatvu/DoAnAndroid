<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductsOfTypeActivity">
    <LinearLayout
        android:id="@+id/linearProductsOfType"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0">

        <ImageView
            android:id="@+id/backProductOfType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/txtTileProductsOfType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/background_dark" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:background="#F8F8F8"

        android:id="@+id/recycleviewProductsOfType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearProductsOfType"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

</RelativeLayout>